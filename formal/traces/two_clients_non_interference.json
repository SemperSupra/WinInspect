{
  "name": "two_clients_non_interference",
  "initial_world": {
    "windows": [
      { "hwnd": "0x1", "visible": true,  "title": "A", "class": "C1" },
      { "hwnd": "0x2", "visible": false, "title": "B", "class": "C2" }
    ]
  },
  "steps": [
    { "client": "c1", "send": { "id": "c1-1", "method": "window.getInfo", "params": { "snapshot_id": "s-fixed", "hwnd": "0x1", "canonical": true } } },
    { "client": "c2", "send": { "id": "c2-1", "method": "window.ensureVisible", "params": { "hwnd": "0x2", "visible": true, "canonical": true } } },
    { "client": "c1", "expect_response": { "id": "c1-1", "ok": true } },
    { "client": "c2", "expect_response": { "id": "c2-1", "ok": true } },
    { "assert": { "type": "non_interference" } },
    { "client": "c2", "send": { "id": "c2-2", "method": "window.ensureVisible", "params": { "hwnd": "0x2", "visible": true, "canonical": true } } },
    { "client": "c2", "expect_response": { "id": "c2-2", "ok": true, "result": { "changed": false } } }
  ]
}
